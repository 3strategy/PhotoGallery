<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:PhotoGallery.Models"          
             
            xmlns:local="clr-namespace:PhotoGallery.Views"
            xmlns:viewModels="clr-namespace:PhotoGallery.ViewModels"
            x:DataType="viewModels:RegistrationPageViewModel"
            x:Class="PhotoGallery.Views.RegistrationPage"
             
             FlowDirection="RightToLeft"
             Title="הרשמה">


    <StackLayout Padding="10">

        <Label Text="שם מלא" />
        <Entry Text="{Binding Name}" />

        <Label Text="שם משתמש" />
        <Entry Text="{Binding UserName}" />

        <Label Text="מייל" />
        <Entry Text="{Binding Email}" />

        <Label Text="טלפון" />
        <Entry Text="{Binding Phone}" />

        <Label Text="סיסמה" />
        <Entry Text="{Binding Password}" IsPassword="True" />

        <Label Text="תאריך לידה" />
        <DatePicker Date="{Binding BirthDate}" />

        <Label Text="גיל" />
        <Label Text="{Binding Age}" />

        <Label Text="{Binding ErrorMessage}" TextColor="Orange" />

        <!-- Register Button -->
        <Button Text="הרשמה" Command="{Binding RegisterCommand}" />
    </StackLayout>
</ContentPage>